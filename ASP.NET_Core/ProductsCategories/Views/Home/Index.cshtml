@using ProductsCategories.Models
@model Product

<h1>Welcome! </h1>


<form asp-controller="Home" asp-action="newProduct" method="POST">
    <h1>New Products</h1>
    <h2> Enter new products here. </h2>
    <p>
        <span asp-validation-for="ProductName"></span>
        <label asp-for="ProductName"> Name : </label><input asp-for="ProductName"><br><br>
    </p>
    <p>
        <span asp-validation-for="ProductDescription"></span>
        <label asp-for="ProductDescription"> Description : </label><input asp-for="ProductDescription"><br><br>
    </p>
    <p>
        <span asp-validation-for="ProductPrice"></span>
        <label asp-for="ProductPrice"></label>  Price: <input asp-for="ProductPrice"><br><br>
    </p>
    <button>SUBMIT</button>
</form>

    <p> <button> <a href= "/Category"> Go to Category Page </a> </button> </p>

<h3>Here are all the products</h3>

@foreach (var product in @ViewBag.Products) {
    <a href='/product/@product.ProductId'>@product.ProductName</a>
}

@if (ViewBag.message != null)
{
    <p>@ViewBag.message</p>
}
